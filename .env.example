# ==============================================
# CodeGravity AI / Discord Bot Panel Configuration
# ==============================================

# ----------------------------------------------
# Application Ports & URLs
# ----------------------------------------------
# The port the Express API will listen on
API_PORT=4000

# The port the SvelteKit Web App will listen on
WEB_PORT=5173

# Public URLs (Used for CORS and Redirects)
PUBLIC_API_URL=http://localhost:4000
PUBLIC_WEB_URL=http://localhost:5173

# ----------------------------------------------
# Database Configuration (MySQL)
# ----------------------------------------------
# Format: mysql://user:password@host:port/database
DATABASE_URL=mysql://root:password@localhost:3306/discord_bot_panel

# ----------------------------------------------
# Authentication (Better-Auth)
# ----------------------------------------------
# A random string used to sign tokens (generate one with `openssl rand -base64 32`)
BETTER_AUTH_SECRET=changeme_to_a_secure_random_string

# The base URL of your auth server (API)
BETTER_AUTH_URL=http://localhost:4000

# Discord OAuth Credentials
# Create an application at https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# ----------------------------------------------
# Bot System
# ----------------------------------------------
# (Optional) Master key for encrypting bot tokens at rest
BOT_TOKEN_ENCRYPTION_KEY=changeme_to_32_byte_hex_string
