# ==============================================
# Discord Bot Panel Configuration
# ==============================================

# ----------------------------------------------
# Application Ports & URLs
# ----------------------------------------------
API_PORT=4000
WEB_PORT=5173

# Public URLs (Change to your domain if deploying)
PUBLIC_API_URL=http://localhost:4000
PUBLIC_WEB_URL=http://localhost:5173

# Web Client URLs
VITE_PUBLIC_API_URL=http://localhost:4000
VITE_PUBLIC_WEB_URL=http://localhost:5173

# Allowed hosts
VITE_ALLOWED_HOSTS=localhost
API_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173

# ----------------------------------------------
# Authentication (Better-Auth)
# ----------------------------------------------
BETTER_AUTH_SECRET=changeme_to_a_secure_random_string
BETTER_AUTH_URL=http://localhost:4000

# Cookie Domain (for cross-subdomain auth when deploying, e.g. ".example.com")
# Leave empty for localhost development
COOKIE_DOMAIN=

# Discord OAuth Credentials
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# ----------------------------------------------
# Bot System (Optional)
# ----------------------------------------------
BOT_TOKEN_ENCRYPTION_KEY=changeme_to_32_byte_hex_string
